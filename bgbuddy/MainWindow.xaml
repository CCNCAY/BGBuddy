<Window x:Class="bgbuddy.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:bgbuddy"
        mc:Ignorable="d"
        Title="BGBuddy" Height="700" Width="1150">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="7*"/>
            <ColumnDefinition Width="43*"/>
        </Grid.ColumnDefinitions>
        <Button Content="Add Friend" Click="AddFriendButton" HorizontalAlignment="Center" Height="20" Margin="0,29,0,0" VerticalAlignment="Top" Width="98"/>
        <Button Content="Add Game" HorizontalAlignment="Center" Margin="0,64,0,0" VerticalAlignment="Top" Width="99"/>
        <TextBox Name="MainTextBox" Grid.Column="1" HorizontalAlignment="Left" Margin="24,29,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="910" Height="620"/>

    </Grid>
</Window>
